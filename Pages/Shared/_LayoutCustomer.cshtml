@{
    ViewData["Title"] = "Koi Fish Delivery";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css">

    <!--=============== BOOTSTRAP ===============-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="~/assets/css/barstyle.css">
    <link rel="stylesheet" href="~/assets/css/Guest-Home.css">
    <link rel="stylesheet" href="~/assets/css/datvanchuyen.css">
    <link rel="stylesheet" href="~/assets/css/historyGuest.css">
    <link rel="stylesheet" href="~/assets/css/tracking.css">

    <title>@ViewData["Title"]</title>
</head>
<body>
    <!--=============== HEADER ===============-->
    <header class="header" id="header">
        <div class="header__container">
            <a href="#" class="header__logo">
                <i class="ri-cloud-fill"></i>
                <span>Koi Fish Delivery</span>
            </a>

            <button class="header__toggle" id="header-toggle">
                <i class="ri-menu-line"></i>
            </button>
        </div>
    </header>

    <!--=============== SIDEBAR ===============-->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar__container">
            <div class="sidebar__user">
                <div class="sidebar__img">
                    <img src="/assets/img/perfil.png" alt="User Profile">
                </div>

                <div class="sidebar__info">
                    <h3>user</h3>
                    <span>user@email.com</span>
                </div>
            </div>

            <div class="sidebar__content">
                <div>
                    <!-- SERVICES SECTION -->
                    <h3 class="sidebar__title " style="color: black;">SERVICES</h3>
                    <div class="sidebar__list">
                        <a asp-page="/Customer/Home/Index" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Customer/Home/Index" ? "active-link" : "")">
                            <i class="ri-home-3-line"></i>
                            <span>Home</span>
                        </a>

                        <a asp-page="/Customer/Voucher" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Customer/Voucher" ? "active-link" : "")">
                            <i class="ri-price-tag-fill"></i>
                            <span>Khuyến Mại</span>
                        </a>

                        <a asp-page="/Customer/Account/Edit" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Customer/Account/Edit" ? "active-link" : "")">
                            <i class="ri-user-3-fill"></i>
                            <span>Tài Khoản</span>
                        </a>
                    </div>
                    <br />

                    <!-- EXPRESS SECTION -->
                    <h3 class="sidebar__title" style="color: black;">EXPRESS</h3>
                    <div class="sidebar__list">
                        <a asp-page="/Customer/Express/Create" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Customer/Express/Create" ? "active-link" : "")">
                            <i class="ri-file-list-3-fill"></i>
                            <span>Đặt Vận Chuyển</span>
                        </a>

                        <a asp-page="/Customer/Express/Tracking" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Customer/Express/Tracking" ? "active-link" : "")">
                            <i class="ri-truck-fill"></i>
                            <span>Theo Dõi Đơn</span>
                        </a>

                        <a asp-page="/Customer/Express/History" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Customer/Express/History" ? "active-link" : "")">
                            <i class="ri-file-list-2-fill"></i>
                            <span>Lịch Sử Đặt Đơn</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="sidebar__actions">
                <form method="post" asp-page="/Account/Logout" class="sidebar__link">
                    <button type="submit" style="background: none; border: none; width: 100%; text-align: left;">
                        <i class="ri-logout-box-r-fill"></i>
                        <span>Đăng Xuất</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!--=============== MAIN ===============-->
    <main class="main container" id="main">
        @RenderBody()
    </main>

    <!--=============== MAIN JS ===============-->
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
