@{
    ViewData["Title"] = "Koi Fish Admin Panel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css">

    <!--=============== BOOTSTRAP ===============-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="~/assets/css/barstyle.css">
    <link rel="stylesheet" href="~/assets/css/admin-style.css">

    <title>@ViewData["Title"]</title>
</head>
<body>
    <!--=============== HEADER ===============-->
    <header class="header" id="header">
        <div class="header__container">
            <a href="#" class="header__logo">
                <i class="ri-cloud-fill"></i>
                <span>Koi Fish Admin</span>
            </a>

            <button class="header__toggle" id="header-toggle">
                <i class="ri-menu-line"></i>
            </button>
        </div>
    </header>

    <!--=============== SIDEBAR ===============-->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar__container">
            <div class="sidebar__user">
                <div class="sidebar__img">
                    <img src="/assets/img/admin_profile.png" alt="Admin Profile">
                </div>

                <div class="sidebar__info">
                    <h3>Admin Name</h3>
                    <span>admin@email.com</span>
                </div>
            </div>

            <div class="sidebar__content">
                <div>
                    <!-- MANAGE SECTION -->
                    <h3 class="sidebar__title">MANAGE</h3>
                    <div class="sidebar__list">
                        <!-- Dashboard Link -->
                        <a asp-page="/Admin/Dashboard" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Dashboard" ? "active-link" : "")">
                            <i class="ri-pie-chart-2-fill"></i>
                            <span>Dashboard</span>
                        </a>

                        <!-- Orders Link -->
                        <a asp-page="/Admin/OrderList" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/OrderList" ? "active-link" : "")">
                            <i class="ri-truck-fill"></i>
                            <span>Danh Sách Đơn</span>
                        </a>

                        <!-- Voucher List Link -->
                        <a asp-page="/Admin/VoucherList/Index" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/VoucherList/Index" ? "active-link" : "")">
                            <i class="ri-price-tag-fill"></i>
                            <span>Danh Sách Khuyến Mãi</span>
                        </a>

                        <!-- Customers Link -->
                        <a asp-page="/Admin/Customers/Index" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Customers/Index" ? "active-link" : "")">
                            <i class="ri-user-3-fill"></i>
                            <span>Customers</span>
                        </a>
                    </div>
                </div>

                <div>
                    <h3 class="sidebar__title">SETTINGS</h3>
                    <div class="sidebar__list">
                        <!-- Settings Link -->
                        <a asp-page="/Admin/Settings" class="sidebar__link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Settings" ? "active-link" : "")">
                            <i class="ri-settings-3-fill"></i>
                            <span>Settings</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="sidebar__actions">
                <!-- Logout Button -->
                <form method="post" asp-page="/Account/Logout" class="sidebar__link">
                    <button type="submit" style="background: none; border: none; width: 100%; text-align: left;">
                        <i class="ri-logout-box-r-fill"></i>
                        <span>Log Out</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!--=============== MAIN ===============-->
    <main class="main container" id="main">
        @RenderBody()
    </main>

    <!--=============== MAIN JS ===============-->
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
