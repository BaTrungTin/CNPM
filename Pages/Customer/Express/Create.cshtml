@page
@model KoiDeliveryOrdering.WebApp.Pages.Customer.Express.CreateModel
@{
    Layout = "_LayoutCustomer";
    ViewData["Title"] = "Tạo Gói Vận Chuyển";
}

<h1 class="text-center">Tạo Gói Vận Chuyển</h1>
<p class="text-center">Vui lòng điền thông tin dưới đây để tạo một gói vận chuyển cá Koi.</p>

<form method="post" id="createPacketFormFields">
    <div class="form-group">
        <label for="form1">Tên người gửi</label>
        <div class="row">
            <div class="col-sm-6">
                <input type="text" id="form1" name="SenderFirstName" class="form-control" placeholder="Tên" required />
            </div>
            <div class="col-sm-6">
                <input type="text" id="form2" name="SenderLastName" class="form-control" placeholder="Họ" required />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label for="form3">Gói dịch vụ vận chuyển</label>
        <input type="text" id="form3" name="ShippingType" class="form-control" placeholder="Trong nước / Quốc tế" required />
    </div>

    <div class="form-group mt-3">
        <label for="form4">Số lượng cá koi</label>
        <input type="number" id="form4" name="Quantity" class="form-control" placeholder="Số lượng" required />
    </div>

    <div class="form-group mt-3">
        <label for="form5">Trọng lượng cá koi (kg)</label>
        <input type="number" id="form5" name="Weight" class="form-control" placeholder="Trọng lượng" required />
    </div>

    <div class="form-group mt-3">
        <label for="form6">Phương thức vận chuyển</label>
        <select id="form6" name="ShippingMethod" class="form-control" required>
            <option value="air">Vận chuyển bằng máy bay</option>
            <option value="sea">Vận chuyển bằng tàu biển</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label for="datepicker1">Ngày vận chuyển</label>
        <input type="date" id="datepicker1" name="ShippingDate" class="form-control" required />
    </div>

    <div class="form-group mt-3">
        <label>Địa chỉ nhận cá</label>
        <div class="row">
            <div class="col-12">
                <input type="text" id="form7" name="ShippingAddress" class="form-control" placeholder="Địa chỉ cụ thể" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form8" name="City" class="form-control" placeholder="Thành phố" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form9" name="Region" class="form-control" placeholder="Vùng / Tỉnh" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form10" name="PostalCode" class="form-control" placeholder="Mã bưu điện" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form11" name="Country" class="form-control" placeholder="Quốc gia" required />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label>Địa chỉ giao cá</label>
        <div class="row">
            <div class="col-12">
                <input type="text" id="form12" name="ShippingAddress" class="form-control" placeholder="Địa chỉ cụ thể" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form13" name="City" class="form-control" placeholder="Thành phố" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form14" name="Region" class="form-control" placeholder="Vùng / Tỉnh" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form15" name="PostalCode" class="form-control" placeholder="Mã bưu điện" required />
            </div>
            <div class="col-sm-6 mt-2">
                <input type="text" id="form16" name="Country" class="form-control" placeholder="Quốc gia" required />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label for="paymentMethod">Hình thức thanh toán</label>
        <select id="paymentMethod" name="PaymentMethod" class="form-control" required>
            <option value="creditCard">Thẻ tín dụng</option>
            <option value="bankTransfer">Chuyển khoản ngân hàng</option>
            <option value="cashOnDelivery">Thanh toán khi nhận hàng</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Tổng chi phí</label>
        <input type="text" class="form-control" value="@Model.TotalAmount.ToString("N0") VND" readonly />
    </div>

    <div class="form-check mt-3">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required />
        <label class="form-check-label" for="flexCheckDefault">
            Tôi đã kiểm tra thông tin và đồng ý với các điều khoản vận chuyển
        </label>
    </div>

    <div class="form-group text-center mt-4">
        <button type="submit" class="btn btn-primary btn-submit">Tạo Gói Vận Chuyển</button>
    </div>
</form>
