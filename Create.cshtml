@model quanlyvanchuyencakoi.web3.Pages.Admin.NguoiDung.CreateModel
@{
}

<div class="container mt-5">
	<h2>@ViewData["Title"]</h2>
	<div>
		<form asp-action="Create" method="post">
			<div class="flex-row">
				<label asp-for="user.UserName" class="col-form-label-lg"></label>
				<input asp-for="user.UserName" class="form-control" />
				<span asp-validation-for="user.UserName" class="text-danger"></span>
			</div>
			<div class="flex-row">
				<label asp-for="user.Name" class="col-form-label-lg"></label>
				<input asp-for="user.Name" class="form-control" />
				<span asp-validation-for="user.Name" class="text-danger"></span>
			</div>
			<div class="flex-row">
				<label asp-for="user.Password" class="col-form-label-lg"></label>
				<input asp-for="user.Password" class="form-control" />
				<span asp-validation-for="user.Password" class="text-danger"></span>
			</div>
			<div class="flex-row">
				<label asp-for="user.Email" class="col-form-label-lg"></label>
				<input asp-for="user.Email" class="form-control" />
				<span asp-validation-for="user.Email" class="text-danger"></span>
			</div>
			<div class="flex-row">
				<label asp-for="user.PhoneNumber" class="col-form-label-lg"></label>
				<input asp-for="user.PhoneNumber" class="form-control" />
				<span asp-validation-for="user.PhoneNumber" class="text-danger"></span>
			</div>
			<div class="flex-row">
				<label asp-for="user.Address" class="col-form-label-lg"></label>
				<input asp-for="user.Address" class="form-control" />
				<span asp-validation-for="user.Address" class="text-danger"></span>
			</div>
			<div class="flex-row">
				<label asp-for="user.Access" class="col-form-label-lg"></label>
				<input asp-for="user.Access" class="form-control" />
				<span asp-validation-for="user.Access" class="text-danger"></span>
			</div>
			<div class="flex-row mt-2">
				<input type="submit" value="Create" class="btn btn-primary" />
				<a class="btn btn-success" asp-page="Index">Back To List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}