@page
@model quanlyvanchuyencakoi.web3.Pages.Admin.NguoiDung.IndexModel
@{
}

<div class="container mt-5" style="width=100%"
<div class="col end-0">
	<a asp-page="Create" class="btn btn-primary">Add New User</a>
</div>
<div>
	<table class="table table-hover table-responsive text-dark">
		<thead>
			<tr>
				<th>Id User</th>
				<th>Name User</th>
				<th>Username</th>
				<th>Password</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Facebook</th>
				<th>Access</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.users.Any())
			{
				@foreach (var user in Model.users)
				{
				<tr>
					<td>
						@user.IdUser
					</td>
					<td>
						@user.UserName
					</td>
					<td>
						@user.Email
					</td>
					<td>
						@user.PhoneNumber
					</td>
					<td>
						@user.Name
					</td>
					<td>
						@user.Address
					</td>
					<td>
						@user.Access
					</td>
					<td>
						<a asp-page="./Edit" asp-route-itemid="@user.IdUser" class="btn btn-warning">Edit</a>
						<a asp-page="./Delete" asp-route-itemid="@user.IdUser" class="btn btn-danger">Delete</a>
					</td>
				</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="5">
						Không có dữ liệu người dùng
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
</div>