@page
@model quanlyvanchuyencakoi.web3.Pages.Admin.NguoiDung.DeleteModel
@{
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn có chắc chắn muốn xóa user này không?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.User.IdUser
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Model.User.UserName
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @Model.User.Password
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.User.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.User.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.User.Name
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.User.Address
        </dd>
        <dt class="col-sm-2">
            Access
        </dt>
        <dd class="col-sm-10">
            @Model.User.Access
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="User.IdUser" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>