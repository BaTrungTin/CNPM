@page
@model quanlyvanchuyencakoi.web3.Pages.Admin.Shipper.IndexModel
@{
}

<h2>Shipper</h2>
<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <div class="col end-0">
        <a asp-page="Create" class="btn btn-primary" style="margin:0; margin-bottom:15px">Add New Shipper</a>
    </div>
    <div class="tableindexshipper">
        <table class="table table-hover table-responsive text-dark">
            <thead>
                <tr>
                    <th style="width: 180px; border: 1px solid #ddd;">Id Shipper</th>
                    <th style="width: 180px; border: 1px solid #ddd;">Name Shipper</th>
                    <th style="width: 180px; border: 1px solid #ddd;">Phone Number</th>
                    <th style="width: 180px; border: 1px solid #ddd;">Image</th>
                    <th style="width: 180px; border: 1px solid #ddd;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.shipper.Any())
                {
                    @foreach (var shipper in Model.shipper)
                    {
                        <tr>
                            <td style="border: 1px solid #ddd;">@shipper.IdShipper</td>
                            <td style="border: 1px solid #ddd;">@shipper.NameShipper</td>
                            <td style="border: 1px solid #ddd;">@shipper.PhoneShipper</td>
                            <td style="border: 1px solid #ddd;">
                                <!-- Sử dụng thẻ <img> để hiển thị ảnh -->
                                <img src="~/admin/images/shipper/a.jpg" alt="Shipper Image" style="width: 50px; height: 50px;" />
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-itemid="@shipper.IdShipper" class="btn btn-warning">Edit</a>
                                <a asp-page="./Delete" asp-route-itemid="@shipper.IdShipper" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Don't have data of shipper</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .tableindexshipper tr:nth-child(odd) {
        background-color: white;
    }

    .tableindexshipper tr:nth-child(even) {
        background-color: whitesmoke;
    }
</style>